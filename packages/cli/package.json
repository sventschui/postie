{
  "name": "@axah/postie-cli",
  "version": "3.1.2",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "license": "MIT",
  "files": [
    "lib/**"
  ],
  "bin": {
    "postie": "lib/src/index.js"
  },
  "scripts": {
    "dev": "nodemon --watch src src/index.ts start --web-port 8026 --smtp-port 1031 --mongo-db mail",
    "build": "pnpm lint && pnpm build-typescript",
    "build-typescript": "tsc --build tsconfig.build.json",
    "lint": "tsc --incremental --noEmit && eslint .",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf lib"
  },
  "dependencies": {
    "@axah/postie-server": "workspace:*",
    "@axah/postie-web": "workspace:*",
    "koa": "^2.14.2",
    "koa-basic-auth": "^4.0.0",
    "koa-router": "^12.0.0",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "mongodb": "^5.6.0",
    "mongodb-memory-server": "^8.13.0",
    "sade": "^1.8.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@axah/eslint-config": "^2.0.0",
    "@axah/tsconfig": "^1.1.0",
    "@types/koa": "^2.13.6",
    "@types/koa-basic-auth": "^2.0.4",
    "@types/koa-send": "^4.1.3",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^20.3.3",
    "eslint": "^8.44.0",
    "nodemon": "^2.0.22",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
