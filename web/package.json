{
  "name": "@postie_/web",
  "version": "1.0.0-alpha.5",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --template src/index.html --no-prerender",
    "serve": "preact build --template src/index.html --no-prerender && serve build --single",
    "dev": "preact watch --template src/index.html",
    "lint": "eslint src",
    "test": "jest"
  },
  "files": [
    "build",
    "index.js"
  ],
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@urql/devtools": "^2.0.3",
    "@urql/exchange-graphcache": "^4.2.1",
    "@urql/preact": "^2.0.2",
    "babel-plugin-graphql-tag": "^3.3.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-config-synacor": "^3.0.4",
    "graphql": "^15.5.1",
    "graphql-tag": "^2.10.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "jest-preset-preact": "^4.0.3",
    "per-env": "^1.0.2",
    "preact": "^10.0.1",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-spy": "^1.2.1",
    "preact-render-to-string": "^5.1.0",
    "preact-router": "^3.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "serve": "^12.0.0",
    "subscriptions-transport-ws": "^0.9.16",
    "urql": "^2.0.4",
    "ws": "^8.0.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "dependencies": {
    "styled-jsx": "^4.0.0"
  }
}
